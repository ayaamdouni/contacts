<p style="color: green"><%= notice %></p>

<% content_for :title, "Contacts" %>

<h1 style="text-align: center;">Contacts</h1>

<div id="profiles">
  <% @profiles.each do |profile| %>
    <div class="card">
      <div class="card-body">
        <%= render profile %>
        <p class="cardButton">
          <%= link_to "Show this contact", profile, class: "btn btn-primary" %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<div class="new-profile-button">
  <%= link_to new_profile_path, class: "btn btn-secondary" do %>
    <i class="fa fa-plus icon"></i>
    New contact
  <% end %>
</div>
