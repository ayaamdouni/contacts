<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Name*", style: "display: block" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :linkedin, "LinkedIn*", style: "display: block" %>
    <%= form.text_field :linkedin, required: true %>
  </div>

  <div>
    <%= form.label :email, "Email*", style: "display: block" %>
    <%= form.text_field :email, required: true %>
  </div>

  <div>
    <%= form.label :phone, "Phone*", style: "display: block" %>
    <%= form.text_field :phone, required: true %>
  </div>

  <div>
    <%= form.label :gender, "Gender*", style: "display: block" %>
    <%= form.radio_button :gender, 'boy' %> Male
    <%= form.radio_button :gender, 'girl' %> Female
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
